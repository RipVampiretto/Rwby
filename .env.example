# ==============================================================================
#                           RWBY BOT - CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in ALL values. All variables are REQUIRED.
# ==============================================================================


# ==============================================================================
# TELEGRAM BOT
# ==============================================================================

# Bot token from @BotFather
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Super Admin IDs (comma-separated Telegram user IDs)
# These users have access to global commands: /cassync, /gban, /broadcast, etc.
SUPER_ADMIN_IDS=123456789,987654321

# Parliament Chat ID (global admin log channel)
# All bans and important events are logged here
PARLIAMENT_CHAT_ID=-1001234567890


# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rwby_bot
POSTGRES_USER=rwby
POSTGRES_PASSWORD=your_secure_password_here


# ==============================================================================
# AI MODERATION (LM Studio)
# ==============================================================================

# LM Studio API endpoint
LM_STUDIO_URL=http://localhost:1234

# Text moderation model (for spam/scam detection)
LM_STUDIO_MODEL=gemma-2-9b-it

# Vision model (for NSFW image/video analysis)
LM_STUDIO_NSFW_MODEL=llava-1.6-mistral-7b


# ==============================================================================
# AI TIMEOUTS (milliseconds)
# ==============================================================================

# Text analysis timeout (spam/scam detection)
AI_TIMEOUT_TEXT=10000

# Single image/frame analysis timeout (NSFW detection)
AI_TIMEOUT_VISION=120000

# Health check timeout (connection test)
AI_TIMEOUT_HEALTH_CHECK=2000


# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================

# Directory for database backups
# BACKUP_DIR=./backups

# Retention policy (how many backups to keep)
BACKUP_RETENTION_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4


# ==============================================================================
# OPTIONAL - LM Studio Conversation Saving (Debugging)
# ==============================================================================
# Uncomment to save NSFW analysis conversations to LM Studio format for review
# This is useful for debugging false positives/negatives

# LM_STUDIO_CONVERSATIONS_DIR=/path/to/.lmstudio/conversations/Rwby
# LM_STUDIO_USER_FILES_DIR=/path/to/.lmstudio/user-files


# ==============================================================================
# OPTIONAL - Local Telegram Bot API Server
# ==============================================================================
# Uncomment if using local API server for large file support (>20MB)

# LOCAL_API_SERVER=http://localhost:8081